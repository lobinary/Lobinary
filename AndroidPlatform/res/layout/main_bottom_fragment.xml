<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bottom_bg"  >

    <!-- //底部菜单的父布局 -->

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:paddingBottom="2dp" >

        <LinearLayout
            android:id="@+id/homeBtnBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/homeBtnView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:contentDescription="@string/homeBtnDesc"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/homeBtnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:text="主页"
                android:textColor="@color/orangered"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contactBtnBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/contactBtnView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:src="@drawable/contact" />

            <TextView
                android:id="@+id/contactBtnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通讯录"
                android:textColor="@color/grey"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/functionBtnBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/featuresBtnView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/features" />

            <TextView
                android:id="@+id/functionBtnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="功能"
                android:textColor="@color/grey"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingBtnBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/settingBtnView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/setting" />

            <TextView
                android:id="@+id/settingBtnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/grey"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/linearLayout1"
        android:background="@color/grey" />

</RelativeLayout>