<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    
    <!--  ############################## 日志页面上  ##############################  -->
    
    <ScrollView
        android:id="@+id/settingContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible"> 
	    <TextView
	        android:id="@+id/logText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:scrollbars="vertical" 
	        android:textIsSelectable="false"
	        android:textColor="@color/black"
	        android:text="欢迎使用APC系统">
	    </TextView>
    </ScrollView>
    <!--  ############################## 日志页面 下  ##############################  -->
    
    <LinearLayout
        android:id="@+id/homeContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="2"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:contentDescription="@string/homeBtnDesc"
                    android:src="@drawable/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="未知功能"
                    android:textColor="@color/orangered"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:contentDescription="@string/homeBtnDesc"
                    android:src="@drawable/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="未知功能"
                    android:textColor="@color/orangered"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:contentDescription="@string/homeBtnDesc"
                    android:src="@drawable/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="未知功能"
                    android:textColor="@color/orangered"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/test1"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:contentDescription="@string/homeBtnDesc"
                    android:src="@drawable/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="未知功能"
                    android:textColor="@color/orangered"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:contentDescription="@string/homeBtnDesc"
                    android:src="@drawable/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="未知功能"
                    android:textColor="@color/orangered"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:contentDescription="@string/homeBtnDesc"
                    android:src="@drawable/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="未知功能"
                    android:textColor="@color/orangered"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/test1"
            android:background="@color/grey" />
    </LinearLayout>
    <!-- ############################## 联系人页面 ############################## -->

    <com.lobinary.android.platform.ui.listview.ListViewCompat
        android:id="@+id/contactContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- ############################## 功能页面 ############################## -->

    <RelativeLayout
        android:id="@+id/featuresContent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="#eee">

        <fragment
            android:id="@+id/features_left_content"
            android:name="com.lobinary.android.platform.ui.fragment.FeaturesLeftFragment"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
        
        <fragment
            android:id="@+id/features_right_content"
            android:name="com.lobinary.android.platform.ui.fragment.FeaturesRightFragment"
            android:layout_width="45dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/features_left_content" />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/features_right_content"
            android:layout_alignParentTop="true"
            android:background="@color/grey" />

    </RelativeLayout>

    <!--  ############################## 测试页面  ##############################  -->

    <RelativeLayout
        android:id="@+id/testContent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="#eee"
        android:columnCount="1"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/messageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:text="消息列表"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColorLink="@color/black" />

        <EditText
            android:id="@+id/testMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/testSendMessageButton"
            android:ems="10"
            android:inputType="text" >
        </EditText>

        <Button
            android:id="@+id/testSendMessageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="发送信息" />

        <EditText
            android:id="@+id/testMessageList"
            android:layout_width="match_parent"
            android:layout_height="376dp"
            android:layout_above="@+id/testMessageText"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/messageTitle"
            android:ems="10"
            android:gravity="top"
            android:inputType="none" />

        <Button
            android:id="@+id/connectServerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/testMessageList"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:layout_toRightOf="@+id/messageTitle"
            android:text="连接服务器" />
    </RelativeLayout>


</RelativeLayout>