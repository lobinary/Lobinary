<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:stretchColumns="*" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:divider="@drawable/line"   
			android:showDividers="middle|beginning|end"><!--分割线图片-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/clientIdLable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户端ID : "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/clientIdText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="201511051045211314"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/clientNameLable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户端名称 : "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/clientNameText"
                    android:layout_width="0dp"
                    android:labelFor="@+id/clientNameLable"
                    android:layout_height="wrap_content"
                    android:text="安卓测试客户端"
                    android:layout_weight="1"
                    android:ems="10" >
                </EditText>

            </LinearLayout>
            
        </LinearLayout>
        
    </ScrollView>

</RelativeLayout>